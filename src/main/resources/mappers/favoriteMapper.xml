<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.jinw0909.spring.lesson06.dao.FavoriteDAO">
	<insert id="insertFavorite" parameterType="map">
		INSERT INTO 
			`favorites`
		(
			`name`
			, `url`
			, createdAt
			, `updatedAt`
		) VALUES (
			#{title}
			, #{url}
			, now()
			, now()
		)
		
		
	</insert>
	<select id="selectFavoriteList" resultType="com.jinw0909.spring.lesson06.model.Favorite">
 		SELECT 
 			`id`
 			,`name` 
 			,`url` 
 			,`createdAt` 
 			,`updatedAt`
 		FROM
 			`favorites`
 		ORDER BY `id` DESC
 	
 	</select>
 	<delete id="deleteFavorite" parameterType="int">
 		DELETE FROM
 			`favorites`
 		WHERE
 			`id` = #{id}
 	</delete>
</mapper>
