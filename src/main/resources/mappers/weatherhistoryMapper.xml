<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.jinw0909.spring.lesson05.dao.WeatherhistoryDAO">
	<select id="selectWeatherhistory" resultType="com.jinw0909.spring.lesson05.model.Weatherhistory">
		SELECT
			`id`
			, `date`
			, `weather`
			, `temperatures`
			, `precipitation`
			, `microDust`
			, `windSpeed`
		FROM
			`weatherhistory`
	</select>
	<insert id="insertWeatherhistory" parameterType="com.jinw0909.spring.lesson05.model.Weatherhistory"
 	useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `weatherhistory`(
			`date`
			, `weather`
			, `temperatures`
			, `precipitation`
			, `microDust`
			, `windSpeed`
		)
		VALUES (
			#{date}
			, #{weather}
			, #{temperatures}
			, #{precipitation}
			, #{microDust}
			, #{windSpeed}
		)
	</insert>
</mapper>