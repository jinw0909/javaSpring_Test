<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.jinw0909.spring.lesson06.dao.BookingDAO">
	<select id="selectBookingList" resultType="com.jinw0909.spring.lesson06.model.Booking">
		SELECT 
			`id`
			, `name`
			, headcount
			, date
			, day
			, phoneNumber
			, state
			, createdAt
			, updatedAt
		FROM 
			`booking`
		ORDER BY
			`date` 
		
	</select>
	<delete id="deleteBooking" parameterType="int">
		DELETE FROM
			`booking`
		WHERE
			`id` = #{id}
	</delete>
	<insert id="insertBooking" parameterType="com.jinw0909.spring.lesson06.model.Booking">
		INSERT INTO
			`booking` (
				`name`
				, `headcount`
				, `day`
				, `date`
				, `phoneNumber`
				, `state`
				, `createdAt`
				, `updatedAt`
			)
		VALUES (
			#{name}
			, #{headcount}
			, #{day}
			, #{date}
			, #{phoneNumber}
			, #{state}
			, now()
			, now()
		)
	</insert>
	<select id="selectBooking" parameterType="map" resultType="com.jinw0909.spring.lesson06.model.Booking">
		SELECT
			`name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
		FROM
			`booking`
		WHERE
			`name` = #{name}
		AND
			`phoneNumber` = #{phoneNumber}
			
	</select>
</mapper>